@{
    ViewBag.Title = "Plumb5 :: Export Group to Google Settings";
    Layout = "~/Views/Shared/PlumbAccountMaster.cshtml";
}

<section class="sheet">
    <div class="pageheader">
        <h6 class="pagetitle">Export Group Settings</h6>
        <ol class="breadcrumb slim-breadcrumb">
            <li class="breadcrumb-item"><a href="#">Ads</a></li>
            <li class="breadcrumb-item"><a href="#">Google</a></li>
            <li class="breadcrumb-item active" aria-current="page">
                Export Group Settings
            </li>
        </ol>
    </div>

    <div class="setttabwrap mr-tp-15">
        <div class="setttabitem active" data-setttype="configuration">
            Configuration
        </div>
    </div>
    <div class="settcontainer">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <div class="box-white p-3">

                    <div class="addemailWrap m-mb-3">
                        <div class="embtnwrap active">
                            <button id="addGoogleAdAccountBtn" type="button" class="btn btn-primary btn-sm selprovid">
                                Add Google Ads Account
                            </button>
                        </div>
                        <div class="popupcontainer hideDiv">
                            <div class="popupItem w-450 m-p-wid-300 position-relative popup-tbl">
                                <div class="popuptitle">
                                    <h6 id="gadSpan">ADD GOOGLE ADS ACCOUNT</h6>
                                    <i id="close-popup" class="icon ion-close"></i>
                                </div>
                                <div class="popupbody">
                                    <div class="popupbodycont pad-20">
                                        <div class="form-group">
                                            <label class="frmlbltxt">Customer ID</label>
                                            <input type="text" class="form-control" id="ui_ConfigurationID" autocomplete="off" placeholder="XXX-XXX-XXXX">
                                        </div>
                                        <div class="form-group">
                                            <label class="frmlbltxt">Add Account Name</label>
                                            <input type="text" class="form-control" id="ui_accountname" autocomplete="off">
                                        </div>
                                    </div>
                                </div>
                                <div class="popupfooter">
                                    <div class="btnwrp">
                                        <button class="btn btn-primary mr-2" type="button" id="ui_btnSaveDetails" data-Id="0">Save</button>
                                        <button class="btn btn-secondary clsepopup" type="button">Cancel</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tableWrapper tbl-settings">
                            <div class="table-responsive">
                                <table id="ui_tableReport" class="table tbl-td-ta-lft border-right border-left">
                                    <thead>
                                        <tr>
                                            <th class="helpIcon td-wid-20 m-p-w-190" scope="col">
                                                <div class="spacBet">
                                                    <div>Ads Account Id</div>
                                                    <div class="th-iconWrp">
                                                        <i class="icon ion-ios-help-outline"></i>
                                                        <div class="toottipWrap">
                                                            GoogleAds Account Id.
                                                        </div>
                                                    </div>
                                                </div>
                                            </th>
                                            <th class="helpIcon td-wid-30 m-p-w-220" scope="col">
                                                <div class="spacBet">
                                                    <div>Ads Account Name</div>
                                                    <div class="th-iconWrp">
                                                        <i class="icon ion-ios-help-outline"></i>
                                                        <div class="toottipWrap">
                                                            Name of the account associated with the googleads account id.
                                                        </div>
                                                    </div>
                                                </div>
                                            </th>
                                            <th class="helpIcon td-wid-30 m-p-w-220" scope="col">
                                                <div class="spacBet">
                                                    <div>Status</div>
                                                    <div class="th-iconWrp">
                                                        <i class="icon ion-ios-help-outline"></i>
                                                        <div class="toottipWrap">
                                                            Authorization status. Active or in-Active.
                                                        </div>
                                                    </div>
                                                </div>
                                            </th>
                                            <th class="helpIcon td-wid-20 m-p-w-150" scope="col">
                                                <div class="spacBet">
                                                    <div>Actions</div>
                                                </div>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="ui_tbodyReportData">
                                    </tbody>
                                </table>
                                <div class="h-70"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Delete Confirm Modal-->
<div class="modal fade bd-example-modal-sm" id="ui_divDeleteDialog" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header delete-modal-header">
                <h5 class="modal-title">Delete this Row?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>This action can't be undone. Are you sure that you want to delete this row?</p>
            </div>
            <div class="modal-footer">
                <button id="ui_btnDeleteConfirm" type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
                <button id="cancelRowConfirm" type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/GoogleAds/Settings.js"></script>
<script src="~/js/GoogleAds/GoogleAdsManager.js"></script>