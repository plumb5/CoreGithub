@{
    ViewBag.Title = "Plumb5 :: Un Subscribed Contacts";
    Layout = "~/Views/Shared/PlumbAccountMaster.cshtml";
}

<section class="sheet">
    <div class="pageheader">
        <h6 class="pagetitle">UnSubscribed  Contacts</h6>
        <ol class="breadcrumb slim-breadcrumb">
            <li class="breadcrumb-item">
                <a href="javascript:void(0);">Mail</a>
            </li>
            <li class="breadcrumb-item">
                <a href="javascript:void(0);">Reports</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Bounced Contacts</li>
        </ol>
    </div>
    <div class="topTabWrap">
        <div class="iconTopNav">
            <div class="topIconItem"></div>
            <div class="topIconItem"></div>
            <div class="topIconItem"></div>
        </div>
        <div class="tabItemWrap">
            <div class="tabItem">
                <a class="tap-nav-link" href="/Mail/BouncedHard">Hard Bounced</a>
            </div>
            <div class="tabItem">
                <a class="tap-nav-link" href="/Mail/BouncedSoft">Soft Bounced</a>
            </div>
            <div class="tabItem">
                <a class="tap-nav-link active" href="javascript:void(0);">Un Subscribed</a>
            </div>
        </div>
        <div class="iconsWrap">
            <div class="emailtempdropdown w-200 mr-3 m-w-150px">
                <select class="form-control form-control-sm addCampName" data-placeholder="" id="ui_ddlGroupFilter">
                    <option value="0">Filter by Group</option>
                </select>
            </div>
            @{
                Html.RenderPartial("_Export");
            }
        </div>
    </div>
    <div class="box-white mr-tp-15">
        <div class="contimportrepwrap">
            <div class="subdivWrap border-top-0 border-left-0 border-right-0">
                <div class="selectedItemWrap">
                    <div class="checkBxCount">
                        <span class="checkedCount">0</span> Contacts selected
                    </div>
                    <div class="actionBtnWrap ml-3">
                        <div class="dropdown">
                            <button class="btn-action dropdown-toggle" type="button" id="bouncedcontaction" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu mcontactsaction" aria-labelledby="bouncedcontaction">
                                <a id="ui_aShowGroupPopUp" class="dropdown-item ContributePermission" href="javascript:void(0);">Add/Remove Group</a>
                                <a class="dropdown-item FullControlPermission" href="javascript:void(0);" data-toggle="modal" data-target="#ui_divDeleteBouncePopUp">Update to Subscribe</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="scheduledresponses">
                <div class="row">
                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <div class="box-white border-0 position-relative">
                            <div class="tableWrapper">
                                <div class="table-responsive tbl-bouncedcont">
                                    <table id="ui_tableReport" class="table">
                                        <thead>
                                            <tr>
                                                <th class="td-wid-5 m-p-w-40" scope="col">
                                                    <div class="custom-control custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input selchbxall" id="contacts_check" name="example1">
                                                        <label class="custom-control-label" for="contacts_check"></label>
                                                    </div>
                                                </th>
                                                <th class="helpIcon m-p-w-250 td-wid-25" scope="col">Email Id</th>
                                                <th class="helpIcon m-p-w-250 td-wid-25" scope="col">Created Date</th>
                                            </tr>
                                        </thead>
                                        <tbody id="ui_tbodyReportData"></tbody>
                                    </table>
                                </div>
                            </div>
                            @{
                                Html.RenderPartial("_Paging");
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade bd-example-modal-sm" id="ui_divExportBouncePopUp" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Export Bounced Contacts</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="ui_ddl_BounceExportFileType">File Format</label>
                        <select class="form-control" name="ExportFileType" id="ui_ddl_BounceExportFileType">
                            <option value="csv">.CSV &nbsp;(Text Tab-separated '|' values)</option>
                            <option value="xls">.XLS</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="ui_btnBounceDataExport">Download</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bd-example-modal-sm" id="ui_divExportUnsubscribePopUp" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Export Unsubscribe List</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="ui_ddl_UnsubscribeExportFileType">File Format</label>
                        <select class="form-control" name="ExportFileType" id="ui_ddl_UnsubscribeExportFileType">
                            <option value="csv">.CSV &nbsp;(Text Tab-separated '|' values)</option>
                            <option value="xls">.XLS &nbsp;&nbsp;(Microsoft Excel 97-2003)</option>
                            <option value="xlsx">.XLSX (Microsoft Excel 2007-2013)</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="ui_btnUnsubscribeDataExport">Download</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="popupcontainer hideDiv" id="ui_divGroupPopUp">
    <div class="popupItem w-450 m-p-wid-300 position-relative">
        <div class="popuptitle">
            <h6>
                ADD AND REMOVE FROM GROUP
            </h6>
            <i id="ui_iconCloseGroupPopUp" class="icon ion-close"></i>
        </div>
        <div class="popupbody">
            <div class="popupbodycont pad-10">
                <div class="popcontWrap">
                    <div class="form-group">
                        <label class="frmlbltxt" for="ui_ddlGroup">Select Group</label>
                        <div class="emailtempdropdown">
                            <select class="form-control addgroupname" multiple data-placeholder="Select Group(s)" id="ui_ddlGroup">
                            </select>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="popupfooter">
            <div class="btnwrp">
                <button class="btn btn-primary mr-2" type="button" id="ui_btnApplyRemove">Save</button>
                <button class="btn btn-secondary clsepopup" type="button" id="ui_btnCloseGroupPopUp">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bd-example-modal-sm" id="ui_divDeleteunsubscribePopUp" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header delete-modal-header">
                <h5 class="modal-title">Delete this row data?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>This action can't be undone. Are you sure that you want to make it subscribe?</p>
            </div>
            <div class="modal-footer">
                <button id="ui_btnDeleteRowConfirm" type="button" class="btn btn-danger">Subscribe</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/Content/select2/css/select2.min.css" />
<script src="~/Content/select2/js/select2.full.min.js"></script>
<script src="~/js/Mail/UnSubscribed.js"></script>