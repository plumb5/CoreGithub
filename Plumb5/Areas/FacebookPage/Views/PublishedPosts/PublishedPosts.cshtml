@{
    ViewBag.Title = "Plumb5 :: Fb Published Posts";
    Layout = "~/Views/Shared/PlumbAccountMaster.cshtml";

}

<section class="sheet">
    <div class="pageheader">
        <h6 class="pagetitle">Published Posts</h6>
        <ol class="breadcrumb slim-breadcrumb">
            <li class="breadcrumb-item"><a href="#">Social</a></li>
            <li class="breadcrumb-item"><a href="#">Facebook</a></li>
            <li class="breadcrumb-item active" aria-current="page">Published Posts</li>
        </ol>
    </div>
    <div class="topTabWrap">
        <div class="iconTopNav">
            <div class="topIconItem"></div>
            <div class="topIconItem"></div>
            <div class="topIconItem"></div>
        </div>
        <div class="tabItemWrap">
            <div class="tabItem">
                <a class="tap-nav-link" href="/FacebookPage/ScheduledPosts">
                    Scheduled
                    Posts
                </a>
            </div>
            <div class="tabItem">
                <a class="tap-nav-link active" href="javascript:void()">
                    Published
                    Posts
                </a>
            </div>
        </div>
        <div class="facebkdrpdwnwrp">
            <div class="dropdown">
                <button class="btn btn-trans-brd dropdown-toggle d-flex align-items-center" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="fbclntnametxt">Plumb5</span> <i class="fbclientlogo" style="background-image: url('https://www.plumb5.com/favicon.ico')"></i>
                </button>
                <div id="ddlPages" class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                </div>
            </div>
        </div>
    </div>
    <div class="topTabWrap brd-TRL">
        <div class="showingWrap pt-2 pb-2">
            <div class="showTxt">Showing Data for :</div>
            <div class="dateWrap">
                <div class="datedropdown">
                    <button class="btn dropdown-toggle" id="selectdateDropdown" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Last 7 Days
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" dataid="last7d" href="javascript:void(0)">Last 7 Days</a>
                        <a class="dropdown-item" dataid="last30d" href="javascript:void(0)">Last 30 Days</a>
                        <a class="dropdown-item" dataid="last90d" href="javascript:void(0)">Last 90 Days</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="createBtnWrap mr-3">
            <button type="button" class="btn btn-primary btn-sm openfbpage ContributePermission">
                <a href="javascript:void(0)">
                    Create
                    Posts
                </a>
            </button>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="box-white">
                <div class="tableWrapper">
                    <div class="table-responsive">
                        <table id="tblPublishedPost" class="table">
                            <thead>
                                <tr>
                                    <th class="helpIcon td-wid-25 m-p-w-300" scope="col">
                                        <div class="sortWrap"><i class="icon ion-arrow-down-c addColor"></i></div>
                                        <div class="spacBet">
                                            <div>Post Message</div>
                                            <div class="th-iconWrp">
                                                <i class="icon ion-ios-help-outline"></i>
                                                <div class="toottipWrap">
                                                </div>
                                            </div>
                                        </div>
                                    </th>
                                    <th class="helpIcon td-wid-15 m-p-w-170" scope="col">
                                        <div class="sortWrap"><i class="icon ion-arrow-down-c addColor"></i></div>
                                        <div class="spacBet">
                                            <div>Created Date</div>
                                            <div class="th-iconWrp">
                                                <i class="icon ion-ios-help-outline"></i>
                                                <div class="toottipWrap">
                                                </div>
                                            </div>
                                        </div>
                                    </th>
                                    <th class="helpIcon td-wid-8 m-p-w-170" scope="col">
                                        Clicks
                                    </th>
                                    <th class="helpIcon td-wid-8 m-p-w-170" scope="col">
                                        Likes
                                    </th>
                                    <th class="helpIcon td-wid-8 m-p-w-170" scope="col">
                                        Comments
                                    </th>
                                    <th class="helpIcon td-wid-12 m-p-w-170" scope="col">
                                        Total
                                        Impression
                                    </th>
                                    <th class="helpIcon td-wid-12 m-p-w-170" scope="col">
                                        Paid
                                        Impression
                                    </th>
                                    <th class="helpIcon td-wid-12 m-p-w-170" scope="col">
                                        Engagement Rate
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="ui_tbodyReportData"></tbody>

                        </table>
                    </div>
                </div>
                @{
                    Html.RenderPartial("_Paging");
                }
            </div>
        </div>
    </div>

</section>
<div id="fbPostPreview" class="popupcontainer hideDiv">
    <div class="popupItem w-450 m-p-wid-300 position-relative">
        <div class="popuptitle">
            <h6>View Facebook Post</h6>
            <i id="close-popup" class="icon ion-close"></i>
        </div>
        <div class="popupbody">
            <div class="popupbodycont pad-10">
                <iframe id="ifrmPreviewPost"
                        style="border:none;overflow:hidden;"
                        scrolling="no"
                        frameborder="0"
                        allowfullscreen="true"
                        allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share">
                </iframe>
            </div>
        </div>
    </div>
</div>

<script src="~/js/FacebookPage/PublishedPosts.js"></script>
@{
    Html.RenderPartial("_CreateFacebookPost");
}
