</section>

<div class="popupcontainer hideDiv">
    <div class="popupItem w-450 m-p-wid-300 position-relative">
        <div class="popuptitle">
            <h6>Add Resources</h6>
            <i id="close-popup" class="icon ion-close"></i>
        </div>
        <div class="popupbody">
            <div class="popupbodycont">
                <div class="popcontWrap">
                    <div class="campinfowrp mt-2 bg-white">
                        <div class="popheadtitlewrp">
                            <h6>Add Links</h6>
                        </div>
                        <div class="mulitvariatfrmwrp mt-4">
                            <div class="form-group row">
                                <label class="frmlbltxt col-sm-4 col-md-4 col-lg-4 col-xl-4" for="">Resources Source</label>
                                <div class="chbxwrp col-sm-12 col-md-12 col-lg-12 col-xl-84">
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" id="frmfilelink" checked name="linkrestype" value="resourceurl"
                                               class="custom-control-input">
                                        <label class="custom-control-label" for="frmfilelink">URL</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" id="frmsetfilupld" name="linkrestype" value="resourceupload"
                                               class="custom-control-input">
                                        <label class="custom-control-label" for="frmsetfilupld">Upload</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" id="frmsetcsscode" name="linkrestype" value="resourcecsscode"
                                               class="custom-control-input">
                                        <label class="custom-control-label" for="frmsetcsscode">Css Code (Global)</label>
                                    </div>
                                </div>
                            </div>
                            <div class="frmcsscodewrp">
                                <div class="form-group">
                                    <label class="frmlbltxt" for="">Where to Place code</label>
                                    <select class="form-control" id="ui_drpcodeplaced">
                                        <option value="0">Select</option>
                                        <option value="Parent">Client Website (Parent)</option>
                                        <option value="Child">Form Body (Inside Form Iframe)</option>
                                    </select>
                                </div>
                                <div id="ui_div_SelectForms" class="frmresuplwrp hideDiv">
                                    <div class="form-group" style="width:370px;">
                                        <label class="frmlbltxt" for="">Select Form(s)</label>
                                        <select class="form-control selectpicker" data-live-search="true" multiple data-placeholder="Select Forms" id="ui_drpdwn_Forms">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group AddCssCodediv hideDiv">
                                    <label class="frmlbltxt" for="">Add Css code here</label>
                                    <textarea name="" id="ui_textareaaddcode" class="form-control" cols="30" rows="2"></textarea>
                                </div>
                            </div>
                            <div class="frmrestypurlwrp">
                                <div class="form-group">
                                    <label class="frmlbltxt" for="ui_txt_FormResourceURL">Resource URL</label>
                                    <input type="text" class="form-control" id="ui_txt_FormResourceURL">
                                </div>
                            </div>
                            <div class="frmresuplwrp hideDiv">
                                <div class="bwsnotifupldwrp">
                                    <button type="button" class="btn btn-second upldbtn">Upload Source File</button>
                                    <input type="file" name="" id="frmsettupldresfile" class="chosefile">
                                </div>
                                <div id="ui_div_FormUploadFileName" class="frmsetbrwfile ml-3 hideDiv">
                                    <span id="ui_span_FormUploadFileName" class="appndfrmresfile"></span>
                                    <span class="frmsetresremove"><i class="icon ion-ios-close-outline"></i></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="frmlbltxt" for="">Resource Description</label>
                                <textarea id="ui_txtArea_FormResourceDescription" class="form-control" cols="30" rows="2"></textarea>
                            </div>
                            <div class="form-group">
                                <label class="frmlbltxt" for="">Resource Type</label>
                                <select class="form-control" id="ui_dropdwn_FormResourceType">
                                    <option value="select">Select</option>
                                    <option value="true">Javasctipt Link</option>
                                    <option value="false">Css Link</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="popupfooter">
            <div class="btnwrp">
                <button id="ui_btn_SaveFormResorces" class="btn btn-primary mr-2" type="button">Save File</button>
                <button class="btn btn-secondary clsepopup" type="button">Cancel</button>
            </div>
        </div>
    </div>
</div>

<!--Delete Confirm Modal-->
<div class="modal fade bd-example-modal-sm" id="deletegroups" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header delete-modal-header">
                <h5 class="modal-title">Delete this Settings?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>This action can't be undone. Are you sure that you want to permanently delete this row?</p>
            </div>
            <div class="modal-footer">
                <button id="deleteRowConfirm" type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
                <button id="cancelRowConfirm" type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
