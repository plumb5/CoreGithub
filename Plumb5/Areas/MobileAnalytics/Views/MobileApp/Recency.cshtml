@{
    ViewBag.Title = "Plumb5 :: Mobile Recency";
    Layout = "~/Views/Shared/PlumbAccountMaster.cshtml";
}

<section class="sheet">
    <div class="pageheader">
        <h6 class="pagetitle">Mobile Behaviour</h6>
        <ol class="breadcrumb slim-breadcrumb">
            <li class="breadcrumb-item"><a href="#">Mobile</a></li>
            <li class="breadcrumb-item"><a href="#">Analytics Overview</a></li>
            <li class="breadcrumb-item active" aria-current="page">Mobile Behaviour</li>
        </ol>
    </div>

    <div class="topTabWrap">
        <div class="iconTopNav">
            <div class="topIconItem"></div>
            <div class="topIconItem"></div>
            <div class="topIconItem"></div>
        </div>
        <div class="tabItemWrap">
            <div class="tabItem"><a class="tap-nav-link" href="/MobileAnalytics/MobileApp/NewReturn">New vs Return</a></div>
            <div class="tabItem"><a class="tap-nav-link" href="/MobileAnalytics/MobileApp/TimeOnMobile">Time on App</a></div>
            <div class="tabItem"><a class="tap-nav-link" href="/MobileAnalytics/MobileApp/Frequency">Frequency</a></div>
            <div class="tabItem"><a class="tap-nav-link active" href="javascript:void(0)">Recency</a></div>
            <div class="tabItem"><a class="tap-nav-link" href="/MobileAnalytics/MobileApp/TimeSpend">Time Spent</a></div>
        </div>
        @{ Html.RenderPartial("_Export"); }
    </div>
    <div class="box-white mr-tp-15">
        <div class="showDateWrap" style="display:none;">
            @{ Html.RenderPartial("_PageHeadingWithDate"); }
        </div>
        <div class="charteeWrap position-relative h-350">
            <canvas id="ui_canvas_MobileRecencyChart"></canvas>
        </div>
    </div>
</section>
<section class="sheet">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="box-white mt-4">
                <div class="tableWrapper">
                    <div class="table-responsive">
                        <table id="ui_tblReportData" class="table first-row">
                            <thead>
                                <tr>
                                    <th scope="col" class="helpIcon m-p-w-150">
                                        <div class="sortWrap"><i class="icon ion-arrow-down-c addColor"></i></div>Day since last visit <i class="icon ion-ios-help-outline"></i>
                                        <div class="toottipWrap" id="ui_dv_MobileRecency_DaySinceLastVisit"></div>
                                    </th>
                                    <th class="helpIcon m-p-w-160" scope="col">
                                        <div class="sortWrap"><i class="icon ion-arrow-down-c addColor"></i></div>Unique Visitors <i class="icon ion-ios-help-outline"></i>                                        <div class="toottipWrap" id="ui_dv_MobileRecency_UniqueVisitors"></div>
                                    </th>
                                    <th class="helpIcon m-p-w-120" scope="col">
                                        <div class="sortWrap"><i class="icon ion-arrow-down-c addColor"></i></div>Sessions <i class="icon ion-ios-help-outline"></i>
                                        <div class="toottipWrap" id="ui_dv_MobileRecency_Sessions"></div>
                                    </th>
                                    <th class="helpIcon m-p-w-120" scope="col">
                                        <div class="sortWrap"><i class="icon ion-arrow-down-c addColor"></i></div>PageViews <i class="icon ion-ios-help-outline"></i>
                                        <div class="toottipWrap" id="ui_dv_MobileRecency_Sessions"></div>
                                    </th>

                                    <th class="helpIcon m-p-w-140" scope="col">
                                        <div class="sortWrap"><i class="icon ion-arrow-down-c addColor"></i></div>Average Time <i class="icon ion-ios-help-outline"></i>
                                        <div class="toottipWrap" id="ui_dv_MobileRecency_AverageTime"> </div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="ui_tbodyReportData">
                            </tbody>
                        </table>
                    </div>
                </div>
                @{ Html.RenderPartial("_Paging"); }
            </div>
        </div>
    </div>

</section>
<script src="~/js/MobileAnalytics/MobileRecency.js"></script>