<div class="popupcontainer hideDiv" id="ui_div_CreateEditSmsTemplate">
    <div class="popupItem w-450 m-p-wid-300 position-relative">
        <div class="popuptitle">
            <h6>Enter Template Information</h6>
            <i id="close-popup" class="icon ion-close"></i>
        </div>
        <div class="popupbody">
            <div class="popupbodycont pad-20">
                <form action="">
                    <div class="custFormWrap">
                        <div class="form-group">
                            <label class="frmlbltxt" for="">Campaign Name</label>
                            <div class="emailtempdropdown">
                                <select id="ui_dllCampaign" class="form-control addCampName select2-hidden-accessible" data-placeholder="Select Group(s)" tabindex="-1" aria-hidden="true">
                                    <option label="Campaign Name" value="0">Select</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="frmlbltxt" for="">Template Name</label>
                            <input id="txtTemplatName" type="text" class="form-control" autocomplete="off" maxlength="50">
                        </div>
                        <div class="form-group">
                            <label class="frmlbltxt" for="">Template Description</label>
                            <textarea name="" id="txtTemplatDescription" class="form-control" cols="30" rows="2" autocomplete="off" maxlength="500"></textarea>
                        </div>
                        <div class="radioBtn pl-3 pt-2" id="ui_divContentType">
                            <label for="" class="frmlbltxt w-30">Content Type</label>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" value="Send Now" checked="" class="custom-control-input" id="smsmailpromo" name="smscontenttype">
                                <label class="custom-control-label" for="smsmailpromo">Promotional</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" value="Send Later" class="custom-control-input" id="smsmailtrans" name="smscontenttype">
                                <label class="custom-control-label" for="smsmailtrans">Transactional</label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="popupfooter">
            <div class="btnwrp">
                <button class="btn btn-primary mr-2" type="button"><a onclick="CreateTemplateNext();">Next</a></button>
                <button class="btn btn-secondary clsepopup" type="button">Cancel</button>
            </div>
        </div>

    </div>

</div>
