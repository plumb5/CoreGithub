@{
    string getChannel = this.ViewData.ContainsKey("channel") ? this.ViewData["channel"].ToString() : string.Empty;
}

<section class="sheet">
    <div class="pageheader">
        <h6 class="pagetitle">Manage Campaigns</h6>
        <ol class="breadcrumb slim-breadcrumb">
            <li class="breadcrumb-item"><a href="#">@getChannel</a></li>
            <li class="breadcrumb-item"><a href="#">Campaigns</a></li>
            <li class="breadcrumb-item active" aria-current="page">Manage Campaigns</li>
        </ol>
    </div>
    <div class="topTabWrap">
        <div class="iconTopNav">
            <div class="topIconItem"></div>
            <div class="topIconItem"></div>
            <div class="topIconItem"></div>
        </div>
        <div class="tabItemWrap">
            @{
                if (getChannel == "Webpush")
                {
                    <div class="tabItem"><a class="tap-nav-link" href="/WebPush/ManageBrowserNotifications/Scheduled"><i class="fa fa-clock-o font-16 pr-2"></i>Scheduled</a></div>
                    <div class="tabItem"><a class="tap-nav-link" href="/WebPush/ManageBrowserNotifications/Rss"><i class="fa fa-rss font-16 pr-2"></i>RSS</a></div>
                    <div class="tabItem"><a class="tap-nav-link active" href="javascript:void(0)"><i class="fa fa-file-text-o font-16 pr-2"></i>Draft</a></div>
                }
                else if (getChannel == "MobilePush")
                {
                    <div class="tabItem"><a class="tap-nav-link" href="/MobilePushNotification/Schedules"><i class="fa fa-clock-o font-16 pr-2"></i>Scheduled</a></div>
                    <div class="tabItem"><a class="tap-nav-link active" href="javascript:void(0)"><i class="fa fa-file-text-o font-16 pr-2"></i>Draft</a></div>
                }
                else
                {
                    <div class="tabItem"><a class="tap-nav-link " href="Schedules"><i class="fa fa-clock-o font-16 pr-2"></i>Scheduled</a></div>
                    <div class="tabItem"><a class="tap-nav-link active" href="javascript:void(0)"><i class="fa fa-file-text-o font-16 pr-2"></i>Draft</a></div>
                }
            }

        </div>
        <div class="iconsWrap">
            <div class="searchCampWrap position-relative mr-3">
                <input class="form-control contsearchfocus" type="text" name="" id="txt_SearchBy" placeholder="Search Campaigns">
                <i class="icon ion-android-search serchicon" id="ui_SerachByCampaign"></i>
            </div>
            @{
                Html.RenderPartial("_Export");
            }
        </div>
    </div>
    <div class="topTabWrap brd-TRL">
        <div class="showingWrap">
        </div>
        <div class="createBtnWrap mr-3">
            <button type="button" class="btn btn-primary btn-sm createdraftPop"><a class="ContributePermission" id="ui_CreateDrafts" href="javascript:void(0)">Create Draft</a></button>
        </div>
    </div>

    <div id="ui_divReportSummary" class="row">
        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="box-white">
                <div class="tableWrapper">
                    <div class="table-responsive">
                        <table id="ui_tblReportData" class="table tbl-td-ta-lft">
                            <thead>
                                <tr>
                                    <th class="helpIcon td-wid-30 m-p-w-250" scope="col">
                                        <div class="sortWrap"><i class="icon ion-arrow-down-c addColor"></i></div>
                                        <div class="spacBet">
                                            <div>Campaign Name</div>
                                            <div class="th-iconWrp"><i class="icon ion-ios-help-outline"></i><div class="toottipWrap"> </div></div>
                                        </div>
                                    </th>
                                    <th class="td-wid-30 m-p-w-250" scope="col">Description</th>
                                    <th class="helpIcon td-wid-20 m-p-w-170" scope="col">
                                        <div class="sortWrap"><i class="icon ion-arrow-down-c addColor"></i></div>
                                        <div class="spacBet">
                                            <div>Updated On</div>
                                            <div class="th-iconWrp"><i class="icon ion-ios-help-outline"></i><div class="toottipWrap"></div></div>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="ui_tbodyReportData"></tbody>

                        </table>
                    </div>
                </div>
                @{
                    Html.RenderPartial("_Paging");
                }
            </div>
        </div>
    </div>

</section>

<div class="popupcontainer hideDiv">
    <div class="popupItem w-450 m-p-wid-300 position-relative">
        <div class="popuptitle">
            <h6 id="spnCampaign">Create Draft Campaign</h6>
            <i id="close-popup" class="icon ion-close"></i>
        </div>
        <div class="popupbody">
            <div class="popupbodycont pad-10">
                <div class="popcontWrap">
                    <div class="form-group">
                        <label class="frmlbltxt" for="">Campaign Name</label>
                        <input type="text" class="form-control" id="ui_txtName" autocomplete="off" maxlength="100">
                    </div>
                    <div class="form-group">
                        <label class="frmlbltxt" for="">Campaign Description</label>
                        <textarea class="form-control" name="" id="ui_txtDescription" cols="30" rows="3" autocomplete="off" maxlength="200"></textarea>
                    </div>
                </div>


            </div>
        </div>
        <div class="popupfooter">
            <div class="btnwrp">
                <button class="btn btn-primary mr-2" type="button" id="ui_btnAdd">Save Campaign</button>
                <button class="btn btn-secondary clsepopup" type="button">Cancel</button>
            </div>
        </div>

    </div>

</div>
<!--Delete Confirm Modal-->
<div class="modal fade bd-example-modal-sm" id="deletegroups" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header delete-modal-header">
                <h5 class="modal-title">Delete this Draft?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>This action can't be done. Are you sure that you want to permanently delete this row?</p>
            </div>
            <div class="modal-footer">
                <button id="deleteRowConfirm" type="button" class="btn btn-danger" data-dismiss="modal">Delete</button>
                <button id="cancelRowConfirm" type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!--Delete Confirm Modal-->

<script src="~/js/Mail/Draft.js"></script>