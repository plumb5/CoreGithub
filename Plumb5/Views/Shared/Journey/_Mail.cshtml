                    <div class="custom-control custom-radio custom-control-inline">
                        <input type="radio" class="custom-control-input" id="lblchkUnsubscribe" name="wrkflwunsubscibe" checked />
                        <label class="custom-control-label" for="lblchkUnsubscribe">Unsubscribe</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="custom-control custom-checkbox custom-control-inline">
                    <input type="checkbox" class="custom-control-input" id="ui_ChkRecuringmail" name="lmsinactivnotisendtype">
                    <label class="custom-control-label" for="ui_ChkRecuringmail">Send Recurring</label>
                </div>
            </div>
            <div id="Recurringmail" class="form-group hideDiv">

                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" class="custom-control-input" id="lblTriggerDaymail" name="rdoTrigger" checked="">
                    <label class="custom-control-label" for="lblTriggerDaymail">After 1 Day</label>
                </div><div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" class="custom-control-input" id="lblTriggerHourmail" name="rdoTrigger">
                    <label class="custom-control-label" for="lblTriggerHourmail">After 1 Hour</label>
                </div>
            </div>
        </div>
        <div class="popupfooter">
            <div class="btnwrp">
