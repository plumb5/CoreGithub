<div class="modal fade bd-example-modal-sm" id="ui_ContactdownloadModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Export Report</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="exampleInputEmail1">File Format</label>
                        <select class="form-control" name="ExportFileType" id="ui_ddl_ExportInnerPageFileType">
                            <option value="csv">.CSV &nbsp;(Text Tab-separated '|' values)</option>
                            <option value="xls">.XLS &nbsp;&nbsp;(Microsoft Excel 97-2003)</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Export Data by</label>
                        <select class="form-control" id="ui_ddl_ExportInnerPageDataRange">
                            <option value="1">Current Page</option>
                            <option value="2">All Records</option>
                            <option value="3">Input Range</option>
                        </select>
                    </div>
                    <div id="ui_divExportInputInner" class="form-group hideDiv">
                        <div class="row">
                            <div class="col">
                                <input type="text" class="form-control" placeholder="0" id="ui_txtFromRangeInner">
                            </div>
                            <div class="col">
                                <input type="text" class="form-control" placeholder="100" id="ui_txToRangeInner">
                            </div>
                        </div>
                        <small class="form-text text-muted hideDiv" id="ui_smallSpecialRangeNote"><b>Note:</b> Maximum of 10 Groups</small>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="ui_btnDataExportInnerPage">Download</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/ExportInnerPageData.js"></script>