<div class="popupcontainer hideDiv" id="ui_divSpamPopUp">
    <div class="popupItem w-900 m-p-wid-300 position-relative">
        <div class="popuptitle">
            <h6>Check Spam Score -  <label id="lblTemplateName"></label> </h6>
            <i id="close-popup" class="icon ion-close"></i>
        </div>
        <div class="popupbody">
            <div class="popupbodycont pad-10">
                <div id="dvSpamCheckPopUp" class="popcontWrap hideDiv">
                    <div class="spamsettwrp">
                        <div class="form-group row">
                            <label class="frmlbltxt col-sm-4" for="">Type</label>
                            <div class="spamscoreradi col-sm-8">
                                <div class="filetypewrap">
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" id="spamscoretrans" name="MailType" class="custom-control-input" checked="checked">
                                        <label class="custom-control-label" for="spamscoretrans">Transactional</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input type="radio" id="spamscorepromo" name="MailType" class="custom-control-input">
