                                                <table class="table tbl-td-ta-lft" id="tblspamrules">
                                                    <tbody>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="accrdwrp-one mt-2">
                                <div id="ui_Spamsignature" class="accord-one" data-accrdId="ui_Spamsignature">
                                    <div class="iconsignwrp h-100 d-flex align-items-center">
                                        <span id="plus1" class="plus">+</span><span id="minus1" class="minus">-</span>
                                        <p class="mb-0">You're not fully authenticated</p>
                                    </div>
                                    <div id="ui_signaturescore"></div>
                                </div>
                                <div id="ui_subsignature" class="accord-contOne">
                                    <div id="ui_signature" class="scrollbar">
                                    </div>
                                </div>
                            </div>

                            <div class="accrdwrp-one mt-2">
                                <div id="ui_Spamlink" class="accord-one" data-accrdId="ui_Spamlink">
                                    <div class="iconsignwrp h-100 d-flex align-items-center">
                                        <span id="plus" class="plus">+</span><span id="minus" class="minus">-</span>
                                        <p class="mb-0">Broken Links</p>
                                    </div>
                                    <div id="ui_linksscore"> </div>
                                </div>
                                <div id="ui_sublink" class="accord-contOne p-3 accrd-cont-bgwhite">
                                    <div id="ui_link" class="scrollbar">
                                    </div>
                                </div>
                            </div>

                            <div class="accrdwrp-one mt-2">
                                <div id="ui_SpamblackList" class="accord-one" data-accrdId="ui_SpamblackList">
                                    <div class="iconsignwrp h-100 d-flex align-items-center">
                                        <span id="plus" class="plus">+</span><span id="minus" class="minus">-</span>
                                        <p class="mb-0" id="ui_blacklisttitle"></p>
                                    </div>
                                    <div id="ui_blacklistscore"></div>
                                </div>
                                <div id="ui_subblackList" class="accord-contOne accrd-cont-bgwhite">
